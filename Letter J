using System;

namespace Atividade_01___A
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("digite o nome do seu estado");
			string estado = Convert.ToString(Console.ReadLine());
			Console.WriteLine("digite o nome da sua cidade");
			string cidade = Convert.ToString(Console.ReadLine());
			Console.WriteLine("digite o nome do seu bairro");
			string bairro = Convert.ToString(Console.ReadLine());
			Console.WriteLine("digite o nome da sua rua ");
			string rua = Convert.ToString(Console.ReadLine());
			Console.WriteLine("digite o numero da sua casa");
			string num = Convert.ToString(Console.ReadLine());
			Console.WriteLine("o seu estado:" + estado + "a sua cidade é:" + cidade + "seu bairro é:" + bairro + "sua rua é :" + rua + "seu numero é " + num);
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
