using System;

namespace Atividade_01___A
{
	class Program
	{
		public static void Main(string[] args)
		{
			
			Console.WriteLine("Digite o pre√ßo:");
			double preco = Convert.ToDouble(Console.ReadLine());
			Console.WriteLine("Digite a porcentagem do desconto:");
			double desconto = Convert.ToDouble(Console.ReadLine());
			double equa = (desconto / 100) * preco;
			double sub = preco - equa;
			
			Console.WriteLine("seu valor vai ser " + sub);
			
			
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
